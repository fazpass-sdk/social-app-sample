<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTitle">
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">15pt</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">cursive</item>
    </style>
    <style name="ElevatedButton">
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rippleColor">@color/gray_dark</item>
        <item name="backgroundTint">@color/elevated_button_bg_color</item>
        <item name="android:textColor">@color/elevated_button_text_color</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">18dp</item>
    </style>
    <style name="ActionButton">
        <item name="android:background">@drawable/action_button_bg</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:radius">18dp</item>
    </style>
    <style name="ToggleButtonText">
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="ErrorText">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@color/error_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">@string/error_message_sample</item>
    </style>
</resources>